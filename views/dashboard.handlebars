<section id="dashboard">
  <div id="profile">
    <h2>{{user.username}}'s Dashboard</h2>
    <div class="image-wrapper">
      <img class="post-profile-img" src="images/{{user.filename}}" alt="{{user.username}} profile image">
    </div>
    <h1>{{user.persona}}</h1>
  </div>
  <div id="new-post">
    <h2>Create New Post</h2>

    <form class="new-post-form">
      <div>
        <label for="post-title">Title</label>
        <input type="text" id="post-title" name="post-title" />
      </div>
      <div>
        <label for="post-text">Rant</label>
        <input type="text" name="post-text" />
      </div>
      <button type="submit" class="btn">Create</button>
    </form>
  </div>
</section>

{{#if posts.length}}
<section class="your-posts">
  <h2>Your Posts</h2>
  
  <ol>
    {{#each posts as |post|}}
    <li>
      {{> post-info post}}
      <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}

<script src="/javascript/add-post.js"></script>