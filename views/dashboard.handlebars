<section>
  {{!-- how do we get profile image here? --}}
  <center>
    <div class="profile-img">
      <img class="user-img" src="images/{{user.filename}}" alt="{{user.username}} profile image">
    </div>
  </center>
  <h1 class="user-stuff">{{user.persona}} would you like to add a post and rant?</h1>
  
  <h2 class="dashboard-header">Create New Post</h2>

  <form class="new-post-form">
    <div>
      <label for="post-title">Title</label>
      <input type="text" id="post-title" name="post-title" />
    </div>
    <div>
      <label for="post-text">Rant</label>
      <input type="text" name="post-text" />
    </div>
    <button type="submit" class="btn">Create</button>
  </form>
</section>

{{#if posts.length}}
<section class="your-posts">
  <h2>Your Posts</h2>
  
  <ol>
    {{#each posts as |post|}}
    <li>
      {{> dashboard-post post}}
      <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit Post</a>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}

<script src="/javascript/add-post.js"></script>