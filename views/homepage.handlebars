<ol class="post-list">
  {{#each posts as |post|}}
  <li>
    {{> post-info post }}
  </li>
  {{/each}}
</ol>

<ol class="user-list">
  {{#each users as |user|}}
  <li>
    <article class="user">
      <div class="title">
        <h3>{{user.username}}</h3>
        <img src="public/images/{{filename}}"
      </div>
      <div class="meta">
        {{user.username}} on the Aniverse since:
        {{created_at}}
        |
        <a href="/post/{{id}}">{{comments.length}} comment(s)</a>
      </div>
    </article>
  </li>
  {{/each}}
</ol>