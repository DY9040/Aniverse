<section>
  {{!-- how do we get profile image here? --}}
  {{user.username}}
  <img class="post-profile-img" src="images/{{user.filename}}" alt="{{user.username}} profile image">

</section>

{{#if posts.length}}
<section class="your-posts">
  <h2>Your Posts</h2>
  
  <ol>
    {{#each posts as |post|}}
    <li>
      {{> post-info post}}
      
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}

