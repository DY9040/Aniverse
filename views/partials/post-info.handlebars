
    <article class="post">
      <div class="title">
        <h1>user id: {{user.id}}</h1>
        <h3>{{title}}</h3>

        <div class="image-wrapper">
          <a href="/user/{{user.id}}"><img class="post-profile-img" src="images/{{user.filename}}" alt="{{user.username}} profile image"></a>
      </div>
      
      <div class="meta">
        by {{user.username}} on
        {{format_date created_at}}
        |
        <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
        </div>
      </div>
    </article>